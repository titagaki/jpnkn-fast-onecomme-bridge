{
  "name": "jpnkn-fast-onecomme-bridge",
  "version": "0.1.0",
  "private": true,
  "main": "dist/main.js",
  "type": "module",
  "scripts": {
    "clean": "rimraf dist",
    "build:ts": "tsc && tsc -p tsconfig.preload.json",
    "dev": "npm run build:ts && electron .",
    "build": "npm run clean && npm run build:ts && electron-builder --win portable --x64",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:e2e": "node tests/e2e-test.js",
    "mock:mqtt": "node tests/mock-mqtt-broker.js",
    "mock:onecomme": "node tests/mock-onecomme-server.js"
  },
  "dependencies": {
    "axios": "^1.7.0",
    "electron-store": "^9.0.0",
    "mqtt": "^5.5.0"
  },
  "devDependencies": {
    "@types/electron-store": "^1.3.1",
    "@types/node": "^25.2.0",
    "aedes": "^0.51.3",
    "electron": "^31.0.0",
    "electron-builder": "^24.6.3",
    "jest": "^29.7.0",
    "rimraf": "^6.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "build": {
    "appId": "com.example.jpnkn-onecomme-bridge",
    "productName": "jpnkn-fast-onecomme-bridge",
    "win": {
      "target": "portable",
      "icon": "build/icon.ico"
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.exe"
    },
    "files": [
      "dist/**",
      "src/**",
      "package.json"
    ],
    "asar": true
  }
}
