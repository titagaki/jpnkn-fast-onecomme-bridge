{
  "name": "jpnkn-fast-onecomme-bridge",
  "version": "0.1.0",
  "private": true,
  "main": "main.js",
  "type": "module",
  "scripts": {
    "dev": "electron .",
    "build": "electron-builder",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:e2e": "node tests/e2e-test.js",
    "mock:mqtt": "node tests/mock-mqtt-broker.js",
    "mock:onecomme": "node tests/mock-onecomme-server.js"
  },
  "dependencies": {
    "axios": "^1.7.0",
    "electron-store": "^9.0.0",
    "mqtt": "^5.5.0"
  },
  "devDependencies": {
    "aedes": "^0.51.3",
    "electron": "^31.0.0",
    "electron-builder": "^24.6.3",
    "jest": "^29.7.0"
  },
  "build": {
    "appId": "com.example.jpnkn-onecomme-bridge",
    "productName": "jpnkn Fast OneComme Bridge",
    "win": {
      "target": [
        "nsis"
      ],
      "requestedExecutionLevel": "asInvoker",
      "icon": "src/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "runAfterFinish": true
    },
    "files": [
      "main.js",
      "preload.js",
      "config.js",
      "src/**",
      "package.json"
    ],
    "asar": true
  }
}
