{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "OneCommeApiPayload",
  "type": "object",
  "properties": {
    "service": {
      "type": "object",
      "properties": {
        "id": { "type": "string", "description": "わんコメの枠ID" }
      },
      "required": ["id"]
    },
    "comment": {
      "type": "object",
      "properties": {
        "id": { "type": "string", "description": "一意のコメントID" },
        "userId": { "type": "string", "description": "投稿者ID" },
        "name": { "type": "string", "description": "投稿者名" },
        "comment": { "type": "string", "description": "本文" },
        "is_new": { "type": "boolean", "default": true }
      },
      "required": ["id", "userId", "name", "comment"]
    }
  },
  "required": ["service", "comment"]
}
